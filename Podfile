    pod 'Firebase/RemoteConfig'
    pod 'Firebase/Storage'
    pod 'MaterialComponents/Buttons'
    pod 'MaterialComponents/Snackbar'

  target 'firebase-demo-iosTests' do
    inherit! :search_paths
    # Pods for testing
  end

  target 'firebase-demo-iosUITests' do
    inherit! :search_paths
    # Pods for testing
  end

end
